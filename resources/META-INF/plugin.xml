<idea-plugin>
  <id>org.zongf.plugins.idea</id>
  <name>zongf idea plugins</name>
  <version>1.0</version>
  <vendor email="3154007684@qq.com" url="">zongf</vendor>

  <description><![CDATA[
    <h3>zongf's idea plugins</h3><br>
     <ul>
        <li>代码格式化:整个文件或选中行代码</li>
        <li>自动生成 constructor, settter,getter,toString</li>
        <li>修复自动导入类</li>
        <li>复制引用至剪切板功能</li>
        <li>优化代码中多行空白行为一行</li>
        <li>unicode 属性文件转换为可读文件</li>
      </ul>
  ]]></description>

  <change-notes><![CDATA[ ]]>
  </change-notes>

  <idea-version since-build="173.0"/>

  <!-- 扩展点 -->
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>

    <!--************************** 顶部菜单: zongf ******************************************** -->
    <group id="zongfMenu" text="zongf" description="自定义插件" popup="true" >
      <!-- 将自定义标签组添加到ManinMenu(顶部菜单栏), 位置last(最后) -->
      <add-to-group group-id="MainMenu" anchor="last"  />
    </group>

    <!--************************** 鼠标右键菜单-第1组 zongf-generate******************************************** -->
    <group id="zongfGenerate" text="zongf-generate" description="自定义插件" popup="true" >
      <!-- 添加到右键菜单 -->
      <add-to-group group-id="EditorPopupMenu" anchor="first" />
      <!-- 添加到顶部菜单 -->
      <add-to-group group-id="zongfMenu" anchor="last"  />
    </group>

    <!-- 自定义按钮: 生成基础方法 -->
    <action id="org.zongf.plugins.idea.action.generate.GenerateBasicMethodsAction"
            class="org.zongf.plugins.idea.action.generate.GenerateBasicMethodsAction"
            text="Generate Basic Methods">
      <!-- 指定快捷键 -->
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt 0"/>
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfGenerate"/>
    </action>

    <!-- 生成方法注释 -->
    <action id="org.zongf.plugins.idea.action.generate.GenerateMethodCommentAction"
            class="org.zongf.plugins.idea.action.generate.GenerateMethodCommentAction"
            text="Generate Method Comments">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfGenerate"/>
      <!-- 指定快捷键 -->
      <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
    </action>

    <!--************************** 鼠标右键菜单-第2组 zongf-optimize ******************************************** -->
    <group id="zongfOptimize" text="zongf-optimize" description="自定义插件" popup="true" >
      <!-- 添加到右键菜单 -->
      <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="zongfGenerate" />
      <!-- 添加到顶部菜单 -->
      <add-to-group group-id="zongfMenu" anchor="last"  />
    </group>

    <!-- 自定义按钮: 格式化代码 -->
    <action id="org.zongf.plugins.idea.action.optimize.CodeFormatAction"
            class="org.zongf.plugins.idea.action.optimize.CodeFormatAction"
            text="Format Code">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfOptimize"/>
    </action>

    <!-- 自定义按钮: 优化自动导包 -->
    <action id="org.zongf.plugins.idea.action.optimize.OptimizeImportAction"
            class="org.zongf.plugins.idea.action.optimize.OptimizeImportAction"
            text="Optimize Auto Imports">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfOptimize"/>
    </action>

    <!-- 自定义按钮: 删除多余的空行 -->
    <action id="org.zongf.plugins.idea.action.optimize.OptimizeMultiBlankLineAction"
            class="org.zongf.plugins.idea.action.optimize.OptimizeMultiBlankLineAction"
            text="Optimize Multi Blank Lines">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfOptimize"/>
    </action>


    <!--************************** 鼠标右键菜单-第3组 zongf-reference ******************************************** -->
    <group id="zongfCopy" text="zongf-copy" description="自定义插件" popup="true" >
      <!-- 添加到右键菜单 -->
      <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="zongfOptimize" />
      <!-- 添加到顶部菜单 -->
      <add-to-group group-id="zongfMenu" anchor="last"  />
    </group>

    <!-- 自定义按钮: 复制引用至剪切板, 使用全限定类名 -->
    <action id="org.zongf.plugins.idea.action.reference.JavaCopyReferenceAction"
            class="org.zongf.plugins.idea.action.reference.JavaCopyReferenceAction"
            text="Copy Java Reference">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfCopy"/>
    </action>

    <!-- 自定义按钮: 复制引用至剪切板, 使用简单类名 -->
    <action id="org.zongf.plugins.idea.action.reference.JavaCopyReferenceSimpleAction"
            class="org.zongf.plugins.idea.action.reference.JavaCopyReferenceSimpleAction"
            text="Copy Java Reference Simple">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="zongfCopy"/>
    </action>


    <!--************************** 鼠标右键菜单-第4组 zongf-work ******************************************** -->
    <!-- 定义标签组信息, 组标签为zongf, 描述为 -->
    <group id="workMenu" text="zongf-work" description="自定义插件" popup="true" >
      <!-- 添加到右键菜单 -->
      <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="zongfCopy" />
      <!-- 添加到顶部菜单 -->
      <add-to-group group-id="zongfMenu" anchor="last"  />
    </group>

    <!-- 生成方法注释 -->
    <action id="org.zongf.plugins.idea.action.work.AddMethodCommentAction"
            class="org.zongf.plugins.idea.action.work.AddMethodCommentAction"
            text="Add Method Comments">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="workMenu"/>
      <!-- 指定快捷键 -->
      <keyboard-shortcut keymap="$default" first-keystroke="alt shift M"/>
    </action>

    <!-- 自定义按钮: 复制引用至剪切板, 使用简单类名 -->
    <action id="org.zongf.plugins.idea.action.work.UnicodeFileConverterAction"
            class="org.zongf.plugins.idea.action.work.UnicodeFileConverterAction"
            text="Repaire Description File">
      <!-- 添加到自定义组中-->
      <add-to-group group-id="workMenu"/>
    </action>


  </actions>

</idea-plugin>